{
  "name": "cmf",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "KAFKAJS_NO_PARTITIONER_WARNING=1 ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "echo \"No linter configured\" && exit 0",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "docker:build": "docker build -t cmf:latest .",
    "docker:run": "docker run -p 8088:8088 cmf:latest",
    "docker:test": "docker build -t cmf:test . && docker run --rm -p 8088:8088 cmf:test"
  },
  "dependencies": {
    "kafkajs": "^2.2.4",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@types/ws": "^8.5.10",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}